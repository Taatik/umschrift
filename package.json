{
  "name": "umschrift",
  "version": "0.1.7",
  "description": "a package for transliterating Hebrew to German",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && npx tsc",
    "test": "clear && jest",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "charlesLoder",
  "license": "MIT",
  "dependencies": {
    "havarotjs": "^0.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlesLoder/umschrift.git"
  },
  "bugs": {
    "url": "https://github.com/charlesLoder/umschrift/issues"
  },
  "homepage": "https://github.com/charlesLoder/umschrift"
}
