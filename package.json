{
  "name": "umschrift",
  "version": "0.1.12",
  "description": "a package for transliterating Hebrew to German",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && npx tsc",
    "test": "clear && jest",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run format && npm run lint && npm test",
    "postversion": "git push && git push --tags"
  },
  "author": "charlesLoder",
  "license": "MIT",
  "dependencies": {
    "havarotjs": "^0.5.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^35.1.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.2",
    "typescript": "^4.1.2"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlesLoder/umschrift.git"
  },
  "bugs": {
    "url": "https://github.com/charlesLoder/umschrift/issues"
  },
  "homepage": "https://github.com/charlesLoder/umschrift"
}
